{
  "version": 2,
  "builds": [
    {
      "src": "mmdireito/packages/backend/main.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "mmdireito/packages/frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/mmdireito/packages/frontend/assets/$1"
    },
    {
      "src": "/pages/(.*)",
      "dest": "/mmdireito/packages/frontend/pages/$1"
    },
    {
        "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "mmdireito/packages/backend/main.py"
    }
  ]
}
